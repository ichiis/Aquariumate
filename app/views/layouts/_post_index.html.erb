<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>ユーザー</th>
      <th>タイトル</th>
      <th>タグ</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
    <tr>
      <td><%= link_to(post.end_user) do %>
        <%= image_tag post.end_user.get_profile_image, size:'50x50' %>
         <% end %>
      </td>
      <td><%= link_to post.title,post, class: "post_#{post.id}" %></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>