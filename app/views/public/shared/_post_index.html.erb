<table class='table table-hover table-inverse'>
  <thead>
    <tr class="text-center">
      <th>投稿日時</th>
      <th>ユーザー</th>
      <th>タイトル</th>
      <th>タグ</th>
      <th>画像</th>
    </tr>
  </thead>
  <tbody class="text-center">
    <% posts.each do |post| %>
    <tr>
      <td><%= post.created_at.strftime('%Y/%m/%d') %></br><%= post.created_at.strftime('%H:%M') %></td>
      <td><%= link_to(post.end_user) do %>
        <%= image_tag post.end_user.get_profile_image, size:'50x50' %>
         <% end %>
      </td>
      <td><%= link_to post.title,post, class: "post_#{post.id}" %></td>
      <td>
        <% post.tags.each do |tag| %>
          <i class="fa-sharp fa-solid fa-tag"></i>
          <%= tag.tag_name %>
        <% end %>
      </td>
      <td><%= post.images.attached? ? post.images.count : 0 %>枚</td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate posts %>