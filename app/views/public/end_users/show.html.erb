<div class='container px-5 px-sm-0'>
  <%= flash[:notice] %>
  <div class='row'>
    <!--end_user_information-->
    <div class='col-md-3'>
      <h2>ユーザー情報</h2>
      <table class='table'>
        <tr>
          <td colspan="2" class="text-center"><%= image_tag @end_user.get_profile_image, size:'100x100' %></td>
        </tr>
        <tr>
          <th>ユーザー名</th>
          <td><%= @end_user.name %></td>
        </tr>
        <tr>
          <td colspan="2">
            <b>イントロダクション</b><br/>
            <%=safe_join(@end_user.introduction.split("\n"),tag(:br))%>
          </td>
        </tr>
      </table>
      <!--ユーザー情報編集ボタンの表示条件-->
      <div class='row'>
        <% if current_end_user == @end_user %>
          <% if @end_user.email != "guest@example.com" %>
            <%= link_to "ユーザー情報編集", edit_end_user_path(@end_user), class: "btn btn-primary btn-block edit_user_#{@end_user.id}" %>
          <% end %>
        <% end %>
      </div>
      <div class="mt-3 row">
        <% if current_end_user == @end_user %>
          <%= link_to "いいね一覧", favorite_posts_end_user_path(@end_user), class: "btn btn-success btn-block" %>
        <% end %>
      </div>
    </div>
    <!--end_user's_post_index-->
    <div class='col-md-8 offset-md-1'>
      <h2>投稿</h2>
      <%= render 'public/shared/post_index',posts: @posts %>
      <%= paginate @posts %>
    </div>
  </div>
</div>