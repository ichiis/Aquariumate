<% if post.post_favorited_by?(current_end_user) %>
  <%= link_to post_favorite_posts_path(post), method: :delete,  style: "color: red;" do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post.favorite_posts.count %>
  <% end %>
<% else %>
  <%= link_to post_favorite_posts_path(post), method: :post do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post.favorite_posts.count %>
  <% end %>
<% end %>
