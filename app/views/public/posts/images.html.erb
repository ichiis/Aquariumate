<div class='container px-sm-0'>
<%= flash[:notice] %>
  <div class="col-12 mx-auto">
    <h2 class="mt-3">投稿画像一覧</h2>
    <% @posts.each do |post| %>
      <% post.images.each do |image| %>
        <%= link_to post_path(post.id) do %>
          <%= image_tag image.variant(resize: '180x180') %>
        <% end %>
      <% end %>
    <% end %>
    <%= paginate @posts %>
  </div>
</div>