<div class="row mt-3">
<!--コメントフォーム-->
  <div class="col-xs-10 col-sm-4 mx-auto mt-3">
    <h4>コメントフォーム</h4>
    <%= form_with model: [post, comment], local: true do |f| %>
      <%= f.text_area :comment, rows:'5',placeholder: "コメント(200文字以内)", class:"w-100" %></br>
      <%= f.submit "送信" %>
    <% end %>
  </div>
<!--コメント一覧-->
  <div class="col-xs-10 col-sm-7 mx-auto mt-3">
    <h4>コメント一覧</h4>
    <table>
      <tbody>
        <% post.comments.each do |comment| %>
        <tr>
          <td class="col-1">
            <%= link_to end_user_path(comment.end_user) do %>
                <%= image_tag comment.end_user.get_profile_image, size: "50x50" %><br>
              <%= comment.end_user.name %>
            <% end %>
          </td>
          <td class="comment_cell col-5">
            <span class="comment_created"><%= comment.created_at.strftime('%Y/%m/%d/%H:%M') %></span></br>
            <span><%= comment.comment %></span>
          </td>
          <td class="pl-3 col-1">
            <% if comment.end_user == current_end_user %>
              <%= link_to post_comment_path(comment.post, comment), method: :delete, data: { confirm: '本当に削除しますか？' } do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>