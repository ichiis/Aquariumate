<div class="container offset-1">
  <h2>新規登録</h2>
    <div class="form ml-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <%= flash[:alert] %>
      <div class="field mt-3">
        <%= f.label :ユーザー名 %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"sign_up-form" %>
      </div>
      <div class="field mt-3">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"sign_up-form" %>
      </div>
      <div class="field mt-3">
        <%= f.label :パスワード（6文字以上） %>
        <% if @minimum_password_length %>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"sign_up-form" %>
       </div>
      <div class="field mt-3">
        <%= f.label :パスワード（確認用） %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"sign_up-form" %>
      </div>

      <div class="actions mt-5">
        <%= f.submit "新規登録", class:'btn btn-success' %>
      </div>
      <% end %>
    </div>

    <div class="mt-5 ml-3">
      <p class="mb-0">既に登録済みの方</p>
      <div class="d-flex">
　       <%= render "public/shared/links" %><span>からログインしてください</span>
　     </div>
    </div>
</div>
