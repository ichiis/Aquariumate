<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th class="text-center">投稿id</th>
      <th>ユーザー</th>
      <th>タイトル</th>
      <th>本文</th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
    <tr>
      <td class="text-center"><%= post.id %></td>
      <td>
        <%= link_to admin_end_user_path(post.end_user.id) do %>
          <%= image_tag post.end_user.get_profile_image, size:'50x50' %>
        <% end %>
      </td>
      <td>
        <%= link_to admin_post_path(post.id) do %>
          <%= post.title %>
        <% end %>
      </td>
      <td><%= post.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate posts %>