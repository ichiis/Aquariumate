<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th class="text-center col-1">投稿id</th>
      <th class="text-center col-1">投稿日時</th>
      <th class="text-center col-2">ユーザー</th>
      <th>投稿内容</th>
      <th class="col-2"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
    <tr>
      <td class="text-center align-middle"><%= post.id %></td>
      <td class="text-center align-middle"><%= post.created_at.strftime('%Y/%m/%d') %></br><%= post.created_at.strftime('%H:%M') %></td>
      <td class="text-center align-middle">
        <%= link_to admin_end_user_path(post.end_user.id) do %>
          <%= image_tag post.end_user.get_profile_image, size:'50x50' %>
          <p class="mt-3"><%= post.end_user.name %></p>
        <% end %>
      </td>
      <td class="pt-1 pb-0  index_main">
        <p class="mb-0 py-1"><%= post.body.truncate(80) %></p>
        <div class="index_option">
        <span>
          <b>
            <% post.tags.each do |tag| %>
              <i class="fa-sharp fa-solid fa-tag"></i>
              <%=link_to tag.tag_name,admin_search_tag_path(tag_id: tag.id), class:"index_tag" %>
            <% end %>
          </b>
        </span></br>
        <span><%= post.comments.count %>コメント,</span> 
        <spa>画像 <%= post.images.attached? ? post.images.count : 0 %> 枚,</span>
        <span><%= post.favorite_posts.count %> いいね</span>
        </div>
      </td>
      <td class="text-center align-middle"><%= link_to "詳細", admin_post_path(post.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>