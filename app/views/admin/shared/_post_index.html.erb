<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th class="text-center col-1">投稿id</th>
      <th class="text-center col-1">投稿日時</th>
      <th class="col-2">ユーザー</th>
      <th class="col-2">タイトル</th>
      <th class="col-4">本文</th>
      <th class="col-2">コメント</th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
    <tr>
      <td class="text-center"><%= post.id %></td>
      <td class="text-center"><%= post.created_at.strftime('%Y/%m/%d') %></br><%= post.created_at.strftime('%H:%M') %></td>
      <td>
        <%= link_to admin_end_user_path(post.end_user.id) do %>
          <%= image_tag post.end_user.get_profile_image, size:'50x50' %>
        <% end %>
      </td>
      <td>
        <%= link_to admin_post_path(post.id) do %>
          <%= post.title %>
        <% end %>
      </td>
      <td><%= post.body %></td>
      <td><%= post.comments.count %>件</td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate posts %>