<!--end_users/show, posts/index, posts/search_tagで使用-->
<% posts.each do |post| %>
<div class="card border-dark my-2 col-sm-12 col-md-10 mx-auto">
  <div class="card-body">
    <div class="d-flex">
        <span><%= link_to admin_end_user_path(post.end_user.id) do %><%= image_tag post.end_user.get_profile_image, size:'30x30' %></span>
      <span class="mt-3 ml-3"><%= post.end_user.name %></span>
      <% end %>
    </div>
    <%= link_to admin_post_path(post.id), class:"text-dark" do %>
    <div>
      <span><%= post.created_at.strftime('%Y/%m/%d') %>  <%= post.created_at.strftime('%H:%M') %></span>
      <p class="mb-0"><%= post.body.truncate(100) %></p>
    </div>
    <!--画像-->
    <% if post.images.present? %>
    <div class="photo_area">
      <% post.images.each do |image| %>
        <%= image_tag image, size: "100x50", class:"img" %>
      <% end %>
    </div>
    <% end %>
    <% end %>
    <div class="index_option">
      <span id="comment_count"><%= post.comments.count %>コメント</span>
    </div>
  </div>
</div>
<% end %>