<div class='container px-5 px-sm-0'>
  <div class="d-flex">
    <h2 class="mt-3">投稿詳細</h2>
    <span class="mt-4 ml-5"><%= link_to "削除", admin_post_path(@post), data: { confirm: '本当に削除しますか？' }, class:"btn btn-sm btn-danger", method: :delete %></span>
  </div>
  <div class='row'>
    <div class="col-sm-10 col-md-5 mx-auto mb-3">
        <table class='table'>
          <tr>
            <td class=" col-3">ユーザー</td>
            <td>
              <%= link_to admin_end_user_path(@post.end_user_id) do %>
                <%= image_tag @post.end_user.get_profile_image, size:"100x100" %><br>
                <%= @post.end_user.name %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>タグ</td>
            <td>
              <% @post_and_tags.each do |tag| %>
              <i class="fa-sharp fa-solid fa-tag"></i>
              <%=link_to tag.tag_name,admin_search_tag_path(tag_id: tag.id) %>
              <% end %>
            </td>
          </tr>
        </table>
    </div>
    <div class="col-sm-10 col-md-5 mx-auto">
      <table class="table">
        <tr>
          <th>本文</th>
        </tr>
        <tr>
          <td><%= safe_join(@post.body.split("\n"),tag(:br)) %></td>
        </tr>
      </table>
    </div>
  </div>
    <!--画像-->
    <div class="col-12 mx-auto">
      <% if @post.images.attached? %>
      <h4 class="mt-3">画像</h4>
        <% @post.images.each do |image| %>
          <%= link_to image, "data-lightbox": image do %>
            <%= image_tag image.variant(resize: '180x180') %>
          <% end %>
        <% end %>
      <% else %>
      <% end %>
    </div>
  <!--コメント-->
  <div class="col-12 mx-auto mt-3">
    <h4>コメント</h4>
      <% unless @comment.present? %>
        <div>
          <p>コメントはありません</p>
        </div>
      <% end %>
    <div id="comment-destroy">
      <%= render 'comment', post: @post, comment: @comment %>
    </div>
  </div>
</div>